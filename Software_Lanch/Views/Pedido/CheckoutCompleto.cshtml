@model Pedido

<div class="container">
    <div class="jumbotrom">
        <h2 class="text-center">@ViewBag.CheckoutMessagemConcluido</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Cliente:<strong>@Model.Nome</strong></p>
            <p>Data do pedido:<strong>@Model.PedidoEnviado</strong></p>
            <p>Número do Pedido:<strong>@Model.Id</strong></p>
        </div>
        <table class="table">
            <tr>
                <th></th>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th>Preço</th>
            </tr>

            @foreach (var item in Model.PedidoItens)
            {
                <tr>
                    <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                    <td>@item.Quantidade</td>
                    <td>@item.Lanche.Nome</td>
                    <td>@item.Lanche.Preco</td>
                 </tr>

            }
        </table>
        <h4>Valor Total do Pedido:<strong>@(((decimal)ViewBag.PedidoTotal).ToString("C2"))</strong></h4>
        
    </div>
</div>
<div class="form-group" style="text-align:center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>