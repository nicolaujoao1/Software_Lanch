@model Lanch

<div class="col-sm-4 col-md-4 col-lg-4">
    <p>
        <img src="@Model.ImagemUrl" class="img-fluid">
    </p>
    <h3>Preço:@Model.Preco.ToString("c")</h3>
    <a asp-controller="Lanche" asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a>
    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
            asp-action="AdicionarItemNoCarrinho" asp-route-id="@Model.Id">Incluir no Carrinho</a>
        </p>
    </div>
</div>