@model Categoria

@{
    ViewData["Title"] = "Deletar categoria";
}
<h2>@ViewData["Title"]</h2>
<h4>Desejas deletar esta categoria?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.CategoriaNome)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />|
        <a asp-action="Index">Cancelar</a>
    </form>
</div>